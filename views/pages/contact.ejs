<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../head'); %>
    <title>Nous contacter</title>
  </head>
  <body class="container" >
    <header>
        <%- include('../header'); %>
    </header>
    <main>
      <div class="jumbotron bg-dark text-white">     
        <div class="container">
            <h1>Me contacter</h1>
            <form method="post">
              <div class="form-group">
                <label for="name">Nom complet</label>
                <input name="name" type="text" class="form-control" id="name" placeholder="Entrer votre nom complet" required>
              </div>
              <div class="form-group">
                <label for="email">Courriel:</label>
                <input name="email" type="email" class="form-control" id="email" placeholder="Entrer votre adresse courriel" required>
              </div>
              <div class="form-group">
                <label for="message">Message:</label>
                <textarea name="message" type="textarea" class="form-control" id="message" placeholder="Entrer votre message ici" required rows="10"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
          </div>
        </div> 
    </main>

    <footer>
      <%- include('../footer'); %>
    </footer>
  </body>
</html>